{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() ~ ' | Inspiration' }}
{% endblock %}

{% block stylesheets %}
	{{ parent() }}

{% endblock %}
{% block javascripts %}
	{{ encore_entry_script_tags('favorite') }}
{% endblock %}
{% block content %}

	<div class="container mt-5">
		<h2 class="font-subtitle display-5 my-5 pt-5 rounded-end">Inspirations de la categorie
			{{ category.name }}</h2>

		<div class="row">

			{% for artwork in artworks %}

				<div class="col-12 col-sm-6">
					<div class="card mb-3 .card-artwork">
						<div class="row g-0">
							<div class="col-md-8 position-relative">
								{% if is_granted('ROLE_ARTIST') %}
									<a class="toggleFavorite position-absolute top-0 start-0 ms-3 text-decoration-none text-dark" href="{{ path('app_artwork_add_favory', { id: artwork.id }) }}">
										<i class="bi fs-1 {{ app.user.artist.isInFavorite(artwork) ? 'bi-palette-fill' : 'bi-palette' }}"></i>
									</a>
								{% endif %}
								<a href="{{ path('app_inspiration_artwork', { 'id':artwork.id }) }}">
									<img src="{{ artwork.artwork is null ? "https://fakeimg.pl/350x200/?text=BientÃ´t&font=lobster" : vich_uploader_asset(artwork) }}" class="img-fluid rounded-start card-artwork" alt="...">
								</a>
							</div>
							<div class="col-md-4">
								<div class="card-body">
									<h5 class="card-title">{{ artwork.name }}</h5>
									<p class="card-text">
										<small class="text-muted">{{ (artwork.workDuration / 60)|round(0, 'ceil') }}h</small>
									</p>
									<ul class="list-group list-group-flush">
										<li class="list-group-item">{{ artwork.artist.user.lastname}}</li>
										<li class="list-group-item">{{ artwork.tool}}</li>
										<li class="list-group-item">{{ artwork.height ~ 'x' ~ artwork.width}}</li>

									</ul>
								</div>
							</div>
						</div>
					</div>


				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
