{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() ~ ' | Inspiration' }}
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
{% endblock %}
{% block javascripts %}
	{{ encore_entry_script_tags('favorite') }}
{% endblock %}

{% block content %}

	<div class="container mt-5">
		<h2 class="font-subtitle display-5 my-5 pt-5 rounded-end">
		S'inspirer de {{ artwork.name }}
		</h2>

		<div class="row">

			<div class="col-12 col-sm-3">

				<div class="card-body">

					<ul class="list-group list-group-flush">
						<li class="list-group-item">{{ artwork.artist.user.lastname}}</li>
						<li class="list-group-item">{{ artwork.tool}}</li>
						<li class="list-group-item">{{ artwork.height ~ 'x' ~ artwork.width}}</li>
						<li class="list-group-item">
							<small class="text-muted">{{ (artwork.workDuration / 60)|round(0, 'ceil') }}h</small>
						</li>
					</ul>
				</div>

			</div>

			<div class="col-12 col-sm-9 position-relative">
			{% if is_granted('ROLE_ARTIST') %}
				<a class="toggleFavorite position-absolute top-0 start-0 ms-3 text-decoration-none text-dark" href="{{ path('app_artwork_add_favory', { id: artwork.id }) }}">
					<i class="bi fs-1 {{ app.user.artist.isInFavorite(artwork) ? 'bi-palette-fill' : 'bi-palette' }}"></i>
				</a>
			{% endif %}

				<img src="{{ artwork.artwork is null ? "https://fakeimg.pl/350x200/?text=BientÃ´t&font=lobster" : vich_uploader_asset(artwork) }}" class="rounded w-100" alt="...">
			</div>

		</div>
	</div>
{% endblock %}
