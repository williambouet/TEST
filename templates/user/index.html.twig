{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() ~ '| Administration utilisateurs'}}
{% endblock %}

{% block content %}
	<div class="container">
		<div class="d-flex justify-content-between mt-5 pt-5">
			<h1 class="">Les utilisateurs</h1>
		</div>

		<table class="table">
			<thead>
				<tr>
					<th>Email</th>
					<th>Pseudo</th>
					<th>Avatar</th>

					<th></th>
				</tr>
			</thead>
			<tbody>
				{% for user in users %}
					<tr>

						<td>{{ user.email }}</td>
						<td>{{ user.lastname }}</td>
						<td class="w-25">
							<img src="{{ user.avatar is empty ? asset ( 'build/images/default_avatar.gif') : vich_uploader_asset(user) }}" class="img-thumbnail w-25" alt="...">
						</td>
						<td>
							{{ include('user/_delete_form.html.twig') }}
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="8">Aucun utilisateur</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>

{% endblock %}
