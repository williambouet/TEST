<form method="post" action="{{ path('app_artwork_delete', {'id': artwork.id}) }}" onsubmit="return confirm('Veuillez confirmer la suppression.');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ artwork.id) }}">
    <button class=" mt-2 btn btn-sm btn-outline-danger d-flex"><i class="bi bi-eraser me-1"></i>Supprimer</button>
</form>
