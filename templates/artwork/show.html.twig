{% extends 'base.html.twig' %}

{% block title %}Artwork{% endblock %}

{% block body %}
    <h1>Artwork</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ artwork.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ artwork.name }}</td>
            </tr>
            <tr>
                <th>Tool</th>
                <td>{{ artwork.tool }}</td>
            </tr>
            <tr>
                <th>Height</th>
                <td>{{ artwork.height }}</td>
            </tr>
            <tr>
                <th>Width</th>
                <td>{{ artwork.width }}</td>
            </tr>
            <tr>
                <th>Base</th>
                <td>{{ artwork.base }}</td>
            </tr>
            <tr>
                <th>Work_duration</th>
                <td>{{ artwork.workDuration }}</td>
            </tr>
            <tr>
                <th>Artwork</th>
                <td>{{ artwork.artwork }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ artwork.updatedAt ? artwork.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_artwork_index') }}">back to list</a>

    <a href="{{ path('app_artwork_edit', {'id': artwork.id}) }}">edit</a>

    {{ include('artwork/_delete_form.html.twig') }}
{% endblock %}
